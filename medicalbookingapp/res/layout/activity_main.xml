<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0bba8b"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.medicalapp.MainActivity" >

    <TextView
        android:id="@+id/nameHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="Medical Booking App"
        android:textColor="#000"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/nameHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:src="@drawable/stethoscope" />

    <EditText
        android:id="@+id/logpasswordin"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/logusernamein"
        android:layout_alignRight="@+id/logusernamein"
        android:layout_below="@+id/logusernamein"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="@drawable/edit_box"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="5dp" >
    </EditText>

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/logusernamein"
        android:layout_alignRight="@+id/logusernamein"
        android:layout_below="@+id/logpasswordin"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="16dp"
        android:background="#e5e0e0"
        android:text="Login" />

    <Button
        android:id="@+id/About"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignRight="@+id/login"
        android:layout_below="@+id/login"
        android:background="#028482"
        android:text="About" />

    <Button
        android:id="@+id/Signup"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/login"
        android:layout_below="@+id/login"
        android:background="#FFF"
        android:text="Signup" />

    <EditText
        android:id="@+id/logusernamein"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit_box"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:paddingLeft="5dp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/notice"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/Signup"
        android:layout_alignRight="@+id/About"
        android:layout_below="@+id/About"
        android:layout_marginTop="14dp"
        android:textColor="@color/Red" />

</RelativeLayout>