<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/nameid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tVMedCen"
        android:layout_centerHorizontal="true"
        android:text="TextView" />
    <TextView
        android:id="@+id/genderid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignRight="@+id/ageid"
        android:text="TextView" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="15dp"
        android:text="Gender       :" />
    <TextView
        android:id="@+id/textchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/changepassword"
        android:layout_alignBottom="@+id/changepassword"
        android:layout_alignLeft="@+id/changepassword"
        android:text="   Change password"
        android:visibility="invisible" />
    <EditText
        android:id="@+id/currentpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/changepassword"
        android:layout_below="@+id/changepassword"
        android:ems="10"
        android:hint="Current password"
        android:inputType="textPassword"
        android:visibility="invisible" />
    <EditText
        android:id="@+id/newpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/currentpassword"
        android:layout_below="@+id/currentpassword"
        android:ems="10"
        android:hint="New password"
        android:inputType="textPassword"
        android:visibility="invisible" >
        <requestFocus />
    </EditText>
    <TextView
        android:id="@+id/ageid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView6"
        android:layout_alignLeft="@+id/nameid"
        android:text="TextView" />
    <TextView
        android:id="@+id/passwordnotice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/changepassword"
        android:layout_toRightOf="@+id/changepassword"
        android:textColor="@color/Red"
        android:textColorHint="@color/Red" />
    <TextView
        android:id="@+id/usernameid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nameid"
        android:layout_alignLeft="@+id/nameid"
        android:layout_marginBottom="19dp"
        android:text="TextView" />
    <TextView
        android:id="@+id/tVDoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/usernameid"
        android:layout_alignBottom="@+id/usernameid"
        android:layout_alignLeft="@+id/bookId"
        android:text="Username :" />
    <TextView
        android:id="@+id/tVMedCen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tVDoc"
        android:layout_below="@+id/bookId"
        android:layout_marginTop="63dp"
        android:text="Name         :" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tVMedCen"
        android:layout_below="@+id/tVMedCen"
        android:layout_marginTop="21dp"
        android:text="Age             :" />
    <Button
        android:id="@+id/cancel"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/genderid"
        android:layout_alignTop="@+id/passwordconfirm"
        android:text="Cancel" 
        android:visibility="invisible"/>
    <Button
        android:id="@+id/passwordconfirm"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newpassword"
        android:layout_below="@+id/newpassword"
        android:layout_marginTop="16dp"
        android:text="Confirm"
        android:visibility="invisible" />
    <Button
        android:id="@+id/changepassword"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_below="@+id/genderid"
        android:layout_marginTop="50dp"
        android:text="Change password" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_centerVertical="true"
        android:text="Medical conditions :" />
    <TextView
        android:id="@+id/condiview"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/passwordnotice"
        android:text="TextView" />
    <TextView
        android:id="@+id/bookId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/usernameid"
        android:text="Profile"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/back"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="back" />

</RelativeLayout>
